<%= render "layouts/view_header", resource: @people.first %>

<table class="table table-hover table-curved table-condensed">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Phone</th>
      <th>Email</th>
      <th>Phone 2</th>
      <th>Email 2</th>
      <th>Skills</th>
      <th>Notes</th>
      <th>Edit</th>
      <th>Profile</th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.first_name %></td>
        <td><%= person.last_name %></td>
        <td><%= person.phone %></td>
        <td><%= person.email %></td>
        <td><%= person.phone_2 %></td>
        <td><%= person.email_2 %></td>
        <td><%= person.skills %></td>
        <td><%= person.notes %></td>
        <td><%= edit_button(person) %></td>
        <td>
          <%= link_to(person_path(person.user),
                      title: "View User Profile",
                      class: 'button edit-button') do
            "<span class='fa fa-user-circle'></span><span style='padding-left: 0.25em'> Profile</span>".html_safe
          end if person.user_id %>
          <%= link_to(edit_user_path(person.user),
                      title: "Edit User Account",
                      class: 'button edit-button') do
            "<span class='fa fa-user-edit'></span><span style='padding-left: 0.25em'> Account</span>".html_safe
          end if person.user_id %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
